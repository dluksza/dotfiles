[color]
	diff = auto
	status = auto
	branch = auto
	interactive = always
	ui = always
[user]
	name = Dariusz Luksza
	email = dariusz.luksza@gmail.com
[core]
	editor = nvim
	paget = less
	untrackedcache = false
	fsmonitor = false

[merge]
	tool = vimdiff
[tag]
  sort = version:refname
[branch]
	autosetuprebase = always
	sort = -committerdate
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[pull]
  rebase = true
  autostash = true
[alias]
	slog = log --oneline --graph --decorate --all
	st = status
	rnext = rebase --continue
	commit = commit -s
	affected-files = diff-tree --name-only -r
	amend = commit --amend -v
	cached = diff --cached
	mhreset = reset --hard origin/master
	mlog = log origin/master
	mcheck = checkout --recurse-submodules origin/master
	irebase = rebase -i
	rpush = push origin HEAD:refs/for/master
    c = commit
    atag = "!git tag -m \"$1\" $1"
[gerrit]
	createchangeid = true
[help]
  autocorrect = prompt
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[submodule]
	recursive = true
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true
[http]
	cookiefile = /Users/lock/.gitcookies
[init]
	defaultBranch = master

# 1Pass config
[user]
   signingkey = {{ onepasswordRead "op://Personal/DefaultSshKey ED25519/public key" }}

[gpg]
   format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
  gpgsign = false

[rerere]
	enabled = true
[maintenance]
