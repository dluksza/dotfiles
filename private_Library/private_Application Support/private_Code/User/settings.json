{
    "workbench.colorTheme": "dark+(elixir)",
    "editor.minimap.autohide": "mouseover",
    "git.openRepositoryInParentFolders": "never",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.experimentalInlineEdit.fontFamily": "Inconsolata",
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "elixirLS.enableTestLenses": true,
    "elixirLS.mixEnv": "test --trace",
    "files.autoSave": "onFocusChange",
    "editor.formatOnPaste": true,
    "dart.flutterHotReloadOnSave": "all",
    "cSpell.userWords": [
        "mocktail",
        "onebasket",
        "unawaited",
        "widgetbook"
    ],
    "dart.debugExternalPackageLibraries": true,
    "dart.debugSdkLibraries": true,
    "editor.minimap.enabled": false,
    "editor.accessibilitySupport": "off",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "debug.javascript.autoAttachFilter": "always",
    "svg.preview.mode": "svg",
    "rust-analyzer.inlayHints.reborrowHints.enable": "always",
    "rust-analyzer.inlayHints.bindingModeHints.enable": true,
    "rust-analyzer.inlayHints.closingBraceHints.minLines": 1,
    "editor.formatOnSaveMode": "modifications",
    "editor.formatOnSave": true,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}